<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_dados_personagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar Personagem"
        android:layout_marginBottom="16dp"/> <!-- Margem inferior para separação -->

    <Button
        android:id="@+id/btn_criar_novo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criar Novo Personagem"
        android:layout_marginBottom="16dp"/> <!-- Margem inferior para separação -->

    <Button
        android:id="@+id/btn_encerrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Encerrar"
        android:layout_marginBottom="16dp"/> <!-- Margem inferior para separação -->

    <Button
        android:id="@+id/btnConsultar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar Personagens" />

</LinearLayout>
